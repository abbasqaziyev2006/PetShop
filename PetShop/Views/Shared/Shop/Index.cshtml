@model ShopViewModel

<section id="banner" class="py-3" style="background: #F9F3EC;">
    <div class="container">
        <div class="hero-content py-5 my-3">
            <h2 class="display-1 mt-3 mb-0">Shop</h2>
            <nav class="breadcrumb">
                <a asp-controller="Home" asp-action="Index" class="breadcrumb-item nav-link">Home</a>
                <a class="breadcrumb-item nav-link" href="#">Pages</a>
                <span class="breadcrumb-item active" aria-current="page">Shop</span>
            </nav>

        </div>
    </div>
</section>

<div class="shopify-grid">
    <div class="container py-5 my-5">
        <div class="row flex-md-row-reverse g-md-5 mb-5">

            <main class="col-md-9">
                <div class="filter-shop d-md-flex justify-content-between align-items-center">
                    <div class="showing-product">
                        <p class="m-0">Showing 3 of 14 results</p>
                    </div>
                    <div class="sort-by">
                        <select class="filter-categories border-0 m-0">
                            <option value="">Default sorting</option>
                            <option value="">Name (A - Z)</option>
                            <option value="">Name (Z - A)</option>
                            <option value="">Price (Low-High)</option>
                            <option value="">Price (High-Low)</option>
                            <option value="">Rating (Highest)</option>
                            <option value="">Rating (Lowest)</option>
                        </select>
                    </div>
                </div>

                <div class="product-grid row" id="productContainer">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-md-4 my-4">
                            <div class="card position-relative">
                                <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.Id">
                                    <img src="~/images/@product.CoverImageUrl" class="img-fluid rounded-4" alt="image">
                                </a>
                                <div class="card-body p-0">
                                    <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.Id">
                                        <h3 class="card-title pt-4 m-0">@product.Name</h3>
                                    </a>
                                    <div class="card-text">
                                        <span class="rating secondary-font">
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                                            }
                                            5.0
                                        </span>

                                        <h3 class="secondary-font text-primary">
                                            $@product.Price.ToString("0.#")
                                        </h3>

                                        <div class="d-flex flex-wrap mt-3">
                                            <a class="btn-cart me-3 px-4 pt-3 pb-3" data-product-id="@product.Id">
                                                <h5 class="text-uppercase m-0">Add to Cart</h5>
                                            </a>
                                            <a href="#"
                                               class="btn-wishlist px-4 pt-3 btn btn-outline-primary add-to-wishlist"
                                               data-id="@product.Id">
                                                <iconify-icon icon="fluent:heart-28-filled" class="fs-5"></iconify-icon>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div style="width:300px; margin:0 auto; justify-content:center;display:flex">
                    <button class="btn btn-primary" id="loadMore" style="margin-top:20px">Load more</button>
                </div>
                <input value="@ViewBag.ProductCount" type="hidden" id="productCount" />

            </main>
            <aside class="col-md-3 mt-5">
                <div class="sidebar">
                    <div class="widget-menu">
                        <div class="widget-search-bar">
                            <div class="search-bar border rounded-2 border-dark-subtle pe-3">
                                <form id="search-form" class="text-center d-flex align-items-center" action="#" method="">
                                    <input type="text" class="form-control border-0 bg-transparent" placeholder="Search for products" />
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path fill="currentColor"
                                              d="M21.71 20.29L18 16.61A9 9 0 1 0 16.61 18l3.68 3.68a1 1 0 0 0 1.42 0a1 1 0 0 0 0-1.39ZM11 18a7 7 0 1 1 7-7a7 7 0 0 1-7 7Z" />
                                    </svg>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="widget-product-categories pt-5">
                        <h4 class="widget-title">Categories</h4>
                        <ul class="product-categories sidebar-list list-unstyled">
                            <li class="cat-item">
                                <a asp-controller="Shop" asp-action="Index">All</a>
                            </li>
                            @foreach (var category in Model.Categories)
                            {
                                <li class="cat-item">
                                    <a asp-controller="Shop" asp-action="Index" asp-route-id="@category.Id" class="nav-link">
                                        @category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="widget-product-tags pt-3">
                        <h4 class="widget-title">Tags</h4>
                        <ul class="product-tags sidebar-list list-unstyled">
                            @foreach (var tag in Model.Tags)
                            {
                                <li class="tags-item">
                                    <a asp-controller="Shop" asp-action="Index" asp-route-id="@tag.Id" class="nav-link">
                                        @tag.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="widget-product-brands pt-3">
                        <h4 class="widget-title">Brands</h4>
                        <ul class="product-tags sidebar-list list-unstyled">
                            <li class="tags-item">
                                <a href="#" class="nav-link">Denim</a>
                            </li>
                            <li class="tags-item">
                                <a href="#" class="nav-link">Puma</a>
                            </li>
                        </ul>
                    </div>
                    <div class="widget-price-filter pt-3">
                        <h4 class="widget-titlewidget-title">Filter By Price</h4>
                        <ul class="product-tags sidebar-list list-unstyled">
                            <li class="tags-item">
                                <a href="#" class="nav-link">Less than $10</a>
                            </li>
                            <li class="tags-item">
                                <a href="#" class="nav-link">$15- $50</a>
                            </li>
                            <li class="tags-item">
                                <a href="#" class="nav-link">$50- $200</a>
                            </li>
                            <li class="tags-item">
                                <a href="#" class="nav-link">$200- $500</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>
